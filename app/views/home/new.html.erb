<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with url: "/home/create" do |form| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>記事タイトル</p>
          <%= form.text_field :blogtitle %>
          <p>本文</p>
          <%= form.text_field :content %>
          <%= form.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
