    <% @posts.each do |post| %>
      <div class="posts-index-item">

<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= post.blogtitle %></span>
          <p> <%= post.content %></p>
          <p> <%= "auther：#{post.user.nickname}" %> </p>
          <p> <%= post.created_at %> </p>
        </div>
        <div class="card-action">
          <%= link_to("詳細", "/home/#{post.id}") %>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <%= link_to("編集", "/home/#{post.id}/edit") %>
          <%= link_to("削除", "/home/#{post.id}/destroy", {method: "post"}) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

      </div>
    <% end %>
