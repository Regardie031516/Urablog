<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <% if user_signed_in? && current_user.id == @post.user_id %>
      <div class="post-menus">
        <%= link_to("編集", "/home/#{@post.id}/edit") %>
        <%= link_to("削除", "/home/#{@post.id}/destroy", {method: "post"}) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
